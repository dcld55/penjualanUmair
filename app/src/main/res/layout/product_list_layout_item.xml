<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="id.decloud.common.entity.ProductEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:contentDescription="gambar produk"
                    android:src="@drawable/round" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@id/product_image"
                    android:fontFamily="@font/mulish_bold"
                    android:text="@{data.productName}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/price"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/product_image"
                    android:fontFamily="@font/mulish_semibold"
                    android:text="Rp. 15.500,-"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/price_discounted"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/product_image"
                    android:fontFamily="@font/mulish_semibold"
                    android:text="Rp. 15.500,-"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buy_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price_discounted"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@id/product_image"
                    android:background="@drawable/bg_button_extra_rounded"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="BUY"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />


            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>